{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node"],
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "mock/**/*",
    "api/**/*",
    "vite.config.ts",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".prettierrc.js",
    "eslint.config.js"
  ]
}